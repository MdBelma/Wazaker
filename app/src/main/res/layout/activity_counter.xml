<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/counterscreen"
        android:background="@drawable/bak"
        android:onClick="setTotalscreen"
        tools:context="com.hazem.wazaker.Activites.CounterActivity.CounterActivity"
        tools:ignore="UsingOnClickInXml">

        <TextView
            android:id="@+id/totalCountstextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/countertextview"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="52dp"
            android:layout_marginBottom="7dp"
            android:text="@string/_0"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countertextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="85sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/countertextview"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/resetbtn"
                android:onClick="resetbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/forty_bg"
                android:text="@string/reset"
                android:textColor="#fff"
                android:textSize="30sp"
                tools:ignore="UsingOnClickInXml" />

        </LinearLayout>
    </RelativeLayout>
</layout>