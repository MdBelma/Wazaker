<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/counterscreen"
    android:background="@drawable/bak"
    android:onClick="setTotalscreen"
    tools:context="com.hazem.wazaker.Activites.CounterActivity">

    <TextView
        android:id="@+id/totaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countertext"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="7dp"
        android:text="المجموع الكلي: 0 "
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp" />

    <TextView
        android:id="@+id/countertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="85sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/countertext"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        >

        <Button
            android:id="@+id/reset"
            android:onClick="resetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/forty_bg"
            android:text="@string/reset"
            android:textColor="#fff"
            android:textSize="30sp"
            />
    </LinearLayout>
</RelativeLayout>